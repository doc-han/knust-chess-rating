<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>KNUST CHESS CLUB</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.2/css/bulma.min.css">
  <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
</head>

<body>
  <section class="section">
  </section>
  <style>
    .rank-item {
      display: flex;
      padding: 15px;
      /* border: 1px solid #333; */
      border-radius: 5px;
      background-color: #efefef;
      margin-bottom: 2px;
    }

    .rank-number {
      min-width: 40px;
    }

    .rank-number div {
      width: 30px;
      height: 30px;
      /* border: 1px solid #333; */
      border-radius: 50%;
      text-align: center;
      line-height: 30px;
      color: #fff;
      font-weight: 600;
      margin-right: 20px;
    }

    .blue-bg {
      background-color: #238cd1;
    }

    .red-bg {
      background-color: #f14668;
    }

    .rank-user {
      min-width: 50%;
      /* background-color: blue; */
    }

    .rank-user div {
      font-weight: 600;
      line-height: 30px;
    }

    .rank-rating {
      min-width: 100px;
      /* background-color: green; */
    }

    .rank-rating div {
      width: 100%;
      line-height: 30px;
      /* border: 1px solid #333; */
      background-color: #333;
      color: #f9f9f9;
      text-align: center;
      border-radius: 5px;
      font-weight: 600;
    }

    .rank-improve {
      min-width: 100px;
    }

    .rank-improve div {
      text-align: center;
      font-size: 20px;
      color: red;
    }

    .my-column {
      max-width: 600px;
      margin: 0 auto;
      padding: 0px 10px;
    }

    .title {
      text-align: center;
    }
  </style>
  <div class="my-column">
    <div class="title">KNUST <%= type.toUpperCase() %> RATING</div>
    <div class="level is-mobile">
      <div class="level-item">
        <a href="/bullet" class="button is-link is-outlined">Bullet</a>
      </div>
      <div class="level-item">
        <a href="/blitz" class="button is-warning is-outlined">Blitz</a>
      </div>
      <div class="level-item">
        <a href="/rapid" class="button is-success is-outlined">Rapid</a>
      </div>
    </div>
    <% data.forEach((i,e)=>{ %>
    <div class="rank-item">
      <div class="rank-number">
        <div class="<%= (e+1)<=10?'blue-bg':'red-bg'%>"><%= e+1 %></div>
      </div>
      <div class="rank-user">
        <div><%= i.username %></div>
      </div>
      <div class="rank-rating">
        <% if(type=="blitz"){ %>
        <div><%= i.blitz %></div>
        <% }else if(type=="rapid"){ %>
        <div><%= i.rapid %></div>
        <% }else if(type=="bullet"){ %>
        <div><%= i.bullet %></div>
        <% }else{ %>
        <div>000</div>
        <% } %>

      </div>
      <div class="rank-improve">
        <div>
          <!-- <i class="fas fa-long-arrow-alt-down"></i>
          <i class="fas fa-long-arrow-alt-up"></i>
          <i class="fas fa-minus"></i> -->
        </div>
      </div>
    </div>
    <% }) %>


  </div>
</body>

</html>